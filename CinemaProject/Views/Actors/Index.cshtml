@model List<Actor>
@{
    ViewData["Title"] = "Index";
}
<a class="btn btn-primary mb-2" href="/Actors/New">Add New Actor </a>


    <div class="row ">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Biography</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Actor actor in Model)
                {
                    <tr>
                        <td class="align-middle"><img src="~/img/@actor.Image" style="width:100px;height:100px; object-fit:cover" class="rounded-circle" alt="@actor.FullName" /></td>
                        <td class="align-middle">@actor.FullName</td>
                        <td class="align-middle">@actor.Bio</td>
                        <td class="align-middle">
                        <a class="btn btn-outline-info" href="/actors/details/@actor.Id">Details</a>
                        <a class="btn btn-outline-success" href="/actors/Edit/@actor.Id">Edit</a>
                        <a class="btn btn-danger" href="/actors/delete/@actor.Id">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

<div style="position:fixed; right:25px ; ">   <a class="btn btn-outline-success" asp-action="Create" asp-controller="Actors">Add a New Actor</a></div>



