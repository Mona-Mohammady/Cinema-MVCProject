@using CinemaProject.Data.Enums;
@model Movie
@{
    ViewData["Title"] = "Edit";
    SelectList ProducerItem = new SelectList(ViewBag.ProducerList, "Id", "FullName");
    SelectList CinemaItem = new SelectList(ViewBag.CinemaList, "Id", "C_Name");
}


<form method="post">

    <div>
        <label asp-for="Name">
        </label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br>
    <div>
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br>
    <div>
        <label asp-for="Image"></label>
        <input class="form-control" asp-for="Image" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <br>
    <div>
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <br>
    <div>
        <label asp-for="StartDate"></label>
        <input class="form-control" asp-for="StartDate" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="EndDate"></label>
        <input class="form-control" asp-for="EndDate" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>


    <div class="form-group mb-2">
        <label asp-for="movieCategory" class="control-label"></label>
        <select asp-for="movieCategory" class="form-control" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
        <span asp-validation-for="movieCategory" class="text-danger"></span>
    </div>
    <div class="mb-2">
        @*<label asp-for="Id"></label>*@

        <select class="form-control " asp-for="Producer_Id" asp-items="ProducerItem">
            <option value="0">Select Producer</option>
        </select>
        <span asp-validation-for="Producer_Id" class="text-danger"></span>
    </div>

    <div class="mb-2">
        @*<label asp-for="Id"></label>*@

        <select class="form-control" asp-for="Cinema_Id" asp-items="CinemaItem">
            <option value="0">Select Cinema</option>
        </select>
        <span asp-validation-for="Cinema_Id" class="text-danger"></span>
    </div>

    <input type="submit" value="Save" action="index" class="btn btn-primary" />
</form>

